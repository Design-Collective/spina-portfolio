= form_for [spina, :admin, @case_study], html: { autocomplete: "off" } do |f|
  - content_for :notification_alert do
    = error_explanation!(@case_study)

  #page_content.tab-content.active
    .table-container
      %table.table.table-form
        %tr
          %td
            Title
          %td
            = f.text_field :title
        %tr
          %td
            Description
          %td
            = render 'spina/admin/shared/rich_text_field', form: f, field: :description
        %tr
          %td
            Select Client
          %td
            = f.collection_select :spina_client_id, Spina::Client.all, :id, :name, prompt: true
  %button.button.button-primary{ type: 'submit', data: { icon: 'o' } }
    Save Case Study

  = link_to "Cancel", spina.admin_case_studies_path, class: 'button button-link'

  - unless @case_study.new_record?
    .pull-right= link_to "Delete", spina.admin_case_study_path(@case_study), method: :delete, data: {confirm: "Are you sure you want to remove this case study?"}, class: 'button button-link button-danger'
